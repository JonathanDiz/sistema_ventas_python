<VentasWindow>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos

    orientation: 'vertical'
    spacing: dp(10)
    padding: dp(10)

    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(10)

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            size_hint_x: 0.75

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(40)
                spacing: dp(10)

                Label:
                    text: 'Bienvenido:'
                    color: 1, 1, 1, 1

                Button:
                    text: 'Admin'
                    size_hint_x: None
                    width: dp(100)
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Signout'
                    size_hint_x: None
                    width: dp(100)
                    background_color: 0.44, 0.26, 0.08, 1

            Label:
                text: 'Sistema de Ventas'
                font_size: '24sp'
                color: 0, 0, 0, 1

            BoxLayout:
                spacing: dp(3)
                size_hint_y: None
                height: dp(40)

                TextInput:
                    hint_text: 'Buscar por Código'
                    multiline: False
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1

                Button:
                    text: 'Buscar'
                    background_color: 0.44, 0.26, 0.08, 1

            BoxLayout:
                orientation: 'vertical'
                spacing: dp(3)

                TextInput:
                    hint_text: 'Código de Producto'
                    multiline: False

                TextInput:
                    hint_text: 'Cantidad'
                    multiline: False

                Button:
                    text: 'Agregar Producto'
                    size_hint_y: None
                    height: dp(20)
                    background_color: 0.44, 0.26, 0.08, 1

            GridLayout:
                cols: 4
                spacing: dp(10)

                Button:
                    text: 'Modificar\nProducto'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Borrar\nProducto'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Realizar\nVenta'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Cancelar\nVenta'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Ver\nVentas'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Generar\nReportes'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Calcular\nTotal'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Confirmar\nVenta'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Descuentos'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Caja'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Facturación'
                    background_color: 0.44, 0.26, 0.08, 1

                Button:
                    text: 'Estadísticas'
                    background_color: 0.44, 0.26, 0.08, 1

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            spacing: dp(10)

            TextInput:
                hint_text: 'Código de Producto'
                multiline: False

            TextInput:
                hint_text: 'Cantidad'
                multiline: False

            Button:
                text: 'Nueva Compra'
                size_hint_y: None
                height: dp(40)
                background_color: 0.44, 0.26, 0.08, 1

            Label:
                text: 'Subtotal: $0.00'
                color: 1, 1, 1, 1

            Label:
                text: 'IVA (19%): $0.00'
                color: 1, 1, 1, 1

            Label:
                text: 'Total: $0.00'
                color: 1, 1, 1, 1

    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.44, 0.26, 0.08, 1
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint_y: None
        height: dp(40)
        Label:
            text: 'Sistema de Ventas @2023'
            color: 0.75, 0.75, 0.75, 1
